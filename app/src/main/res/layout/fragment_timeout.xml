<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6EAED"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Transaksi.TimeoutFragment">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rincian Pembayaran"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="5dp"
        app:corner_radius="4dp"
        android:background="@drawable/bg_tiket2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#DCD3AE">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Jumlah yang harus dibayarkan"/>
            <TextView
                android:id="@+id/tv_totharga"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textStyle="bold"
                android:text="Rp "/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_namatiket"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pantai Goa Cina - Tiket Masuk"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal 17, January 2019" />

        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_hargasatuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga @Rp9.700" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_subtotaltiket"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 38.800" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ketlayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya Layanan" />
            <TextView
                android:id="@+id/tv_hargalayanan"
                android:layout_marginLeft="13dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 2.500" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travelin fee" />
            <TextView
                android:layout_marginLeft="13dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pajak" />
            <TextView
                android:layout_marginLeft="13dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termasuk" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="3dp"
            android:background="#E6EAED"/>
        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_hargatotal2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 38.000"
                android:textStyle="bold"/>
        </RelativeLayout>

    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

</LinearLayout>