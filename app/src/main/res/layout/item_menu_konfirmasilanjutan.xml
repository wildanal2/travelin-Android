<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/img_catatan"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_catatan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_catatan"
            android:layout_marginHorizontal="10dp"
            android:text="Pastikan Data yang anda pilih benar sudah benar ?"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_batal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batal"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_roundbatal"/>

            <Button
                android:id="@+id/btn_ya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ya, Saya Yakin"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_roundkodekasir"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>